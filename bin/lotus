#!/usr/bin/env ruby

require 'bundler'
Bundler.require
require 'active_support/core_ext'

root = File.expand_path(__dir__ + '/..')
%w{job}.each do |filename|
  require root+'/lib/'+filename
end

%w{sleep}.each do |filename|
  require root+'/jobs/'+filename
end


class Lotus < Thor
  desc 'sleep', 'test job'
  def sleep
    SleepJob.new().execute!
  end
end

Lotus.start(ARGV)
